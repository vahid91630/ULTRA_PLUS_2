# Trading Mode: paper (simulation) or live (real orders)
MODE=paper

# Exchange selection
EXCHANGE=MEXC

# MEXC API credentials (choose one secret var naming)
MEXC_API_KEY=your_api_key_here
MEXC_API_SECRET=your_api_secret_here
# OR
# MEXC_SECRET_KEY=your_api_secret_here

# Core trading symbol & timeframe
SYMBOL=BTC/USDT
TIMEFRAME=1m

# Risk parameters
RISK_PER_TRADE=0.01
MAX_USD_PER_TRADE=200
MAX_POSITION_USD=2000
FEE_BPS=10
SLIPPAGE_BPS=5
STOP_LOSS_BPS=150
TAKE_PROFIT_BPS=300
HEARTBEAT_SEC=15

# Optional external APIs (leave empty if unused)
OPENAI_API_KEY=
NEWSAPI_KEY=
ALPHA_VANTAGE_API_KEY=
SANTIMENT_API_KEY=
TAAPI_API_KEY=
POLYGON_API_KEY=
TOKENMETRIK_API_KEY=

